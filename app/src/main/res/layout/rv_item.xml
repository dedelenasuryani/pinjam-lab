<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="10pt"
            android:text="Nama Peminjam"
            android:textColor="@color/colorPrimaryy"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="8pt"
            android:text=" : "
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryy" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="8pt"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryy"
            android:id="@+id/txt_namaPeminjam"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="10pt"
            android:text="Jabatan"
            android:textColor="@color/colorPrimaryy"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="8pt"
            android:text=" : "
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryy" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="8pt"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryy"
            android:id="@+id/txt_jabatan"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="10pt"
            android:text="Kode Barang"
            android:textColor="@color/colorPrimaryy"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="8pt"
            android:text=" : "
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryy" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="8pt"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryy"
            android:id="@+id/txt_kode"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="10pt"
            android:text="Nama Barang"
            android:textColor="@color/colorPrimaryy"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="8pt"
            android:text=" : "
            android:textStyle="bold"

            android:textColor="@color/colorPrimaryy" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="8pt"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryy"
            android:id="@+id/txt_namaBarang"
         />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="10pt"
            android:text="Ruang Lab"
            android:textColor="@color/colorPrimaryy"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="8pt"
            android:text=" : "
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryy"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="8pt"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryy"
            android:id="@+id/txt_ruangLab"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>


</LinearLayout>